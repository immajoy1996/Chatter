<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/egg_points"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="+500"
        android:textSize="25sp"
        android:textColor="#0084FF"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:gravity="right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/fixed_image_of_egg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/egg"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/egg_points"
        />
    
    <TextView
        android:id="@+id/egg_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Paul mad"
        android:textSize="20sp"
        android:layout_marginStart="50dp"
        android:textColor="#0084FF"
        app:layout_constraintStart_toEndOf="@id/fixed_image_of_egg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/egg_message"
        />

</androidx.constraintlayout.widget.ConstraintLayout>