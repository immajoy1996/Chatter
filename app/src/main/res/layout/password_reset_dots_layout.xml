<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/circle_dots_layout"
    android:layout_marginBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/circle1_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/circle1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/grey_circle" />

        <TextView
            android:id="@+id/circle1_filled"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/grey_circle_filled"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/circle2_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/circle1_layout">

        <TextView
            android:id="@+id/circle2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/grey_circle" />

        <TextView
            android:id="@+id/circle2_filled"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/grey_circle_filled"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/circle3_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/circle2_layout">

        <TextView
            android:id="@+id/circle3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/grey_circle" />

        <TextView
            android:id="@+id/circle3_filled"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/grey_circle_filled"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/circle4_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/circle3_layout">

        <TextView
            android:id="@+id/circle4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/grey_circle" />

        <TextView
            android:id="@+id/circle4_filled"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/grey_circle_filled"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/circle5_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/circle4_layout">

        <TextView
            android:id="@+id/circle5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/grey_circle" />

        <TextView
            android:id="@+id/circle5_filled"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/grey_circle_filled"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>