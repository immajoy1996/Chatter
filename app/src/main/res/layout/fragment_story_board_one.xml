<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc">

    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar" />

    <TextView
        android:id="@+id/top_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Bear to see what he has to say"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        android:textColor="#696969"
        app:layout_constraintBottom_toTopOf="@id/message_layout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".3"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/story_message1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/message_bubble_selector"
            android:padding="20dp"
            android:textColor="#696969"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/helper_profile1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/helper_profile1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/business_profile"
            app:layout_constraintBottom_toBottomOf="@id/story_message1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message_layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline2">

        <TextView
            android:id="@+id/story_message2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/option_bubble"
            android:padding="20dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/helper_profile2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/helper_profile2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/business_profile"
            app:layout_constraintBottom_toBottomOf="@id/story_message2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/bottom_nav_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>