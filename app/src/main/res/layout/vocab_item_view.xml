<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gem_item_selector"
    android:padding="10dp"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/spanish_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tener"
        android:textColor="#696969"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to have"
        android:textSize="20sp"
        android:textColor="#696969"
        app:layout_constraintTop_toBottomOf="@id/spanish_word"
        />

    <TextView
        android:id="@+id/transliteration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(ten-er)"
        android:textSize="15sp"
        android:textColor="#696969"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/spanish_word"
        app:layout_constraintStart_toEndOf="@id/spanish_word"
        />
    
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/audio"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>