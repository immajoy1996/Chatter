<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".CreateChatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/options_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/create_bot_submit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/create_bot_submit"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:id="@+id/optionA"
            android:layout_width="@dimen/option_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/option_bubble"
            android:gravity="center"
            android:padding="10dp"
            android:text="Type message here"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_bot_submit"></EditText>

        <ImageView
            android:id="@+id/optionA_submit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/right_arrow"
            app:layout_constraintBottom_toBottomOf="@id/optionA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/optionA" />

        <EditText
            android:id="@+id/optionB"
            android:layout_width="@dimen/option_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/option_bubble"
            android:gravity="center"
            android:padding="10dp"
            android:text="Type message here"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optionA"></EditText>

        <ImageView
            android:id="@+id/optionB_submit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/right_arrow"
            app:layout_constraintBottom_toBottomOf="@id/optionB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/optionB" />

        <EditText
            android:id="@+id/optionC"
            android:layout_width="@dimen/option_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/option_bubble"
            android:gravity="center"
            android:padding="10dp"
            android:text="Type message here"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optionB"></EditText>

        <ImageView
            android:id="@+id/optionC_submit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/right_arrow"
            app:layout_constraintBottom_toBottomOf="@id/optionC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/optionC" />

        <TextView
            android:id="@+id/conversation_end_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="You've reached the end of the conversation. Click the home button to try a new flow."
            android:textColor="#696969"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>