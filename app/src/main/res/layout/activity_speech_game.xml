<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.SpeechGameActivity">

    <ImageView
        android:id="@+id/speech_game_back_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/speech_game_top_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/avenir_next"
        android:gravity="center"
        android:text="Type what Helper Monkey says"
        android:textColor="#696969"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/speech_game_guideline_bot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/speech_game_speaker_bot"
        android:layout_width="212dp"
        android:layout_height="168dp"
        android:src="@drawable/business_profile"
        app:layout_constraintBottom_toTopOf="@+id/speech_game_feedback_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speech_game_guideline_bot"
        app:layout_constraintVertical_bias="0.297" />

    <ProgressBar
        android:id="@+id/flashcards_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:indeterminate="false"
        android:indeterminateTint="#0084FF"
        android:progress="30"
        android:progressDrawable="@drawable/progress_bar_states"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speech_game_guideline_progressbar" />

    <TextView
        android:id="@+id/speech_game_feedback_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Almost There!"
        android:textColor="#0084FF"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/speech_game_guideline_progressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/speech_game_speaker_user_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:cursorVisible="true"
        android:focusedByDefault="true"
        android:fontFamily="@font/avenir_next"
        android:gravity="center"
        android:hint="Type here..."
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speech_game_guideline_user_input" />

    <Button
        android:id="@+id/speech_game_check_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Check"
        android:textColor="#0084FF"
        android:background="@drawable/check_button_background"
        android:textAllCaps="false"
        android:gravity="center"
        android:fontFamily="@font/avenir_next"
        android:textSize="25sp"
        android:padding="10dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/speech_game_guideline_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="320dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/speech_game_guideline_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/speech_game_guideline_user_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="277dp" />

</androidx.constraintlayout.widget.ConstraintLayout>